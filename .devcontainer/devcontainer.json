{
  "name": "Hexo",
  "build": { "dockerfile": "Dockerfile" },
  "remoteUser": "node",
  "postCreateCommand": {
    "mkdir": "mkdir -p ~/.ssh/", 
    "id_rsa": "echo \"$DEPLOY_KEY\" > ~/.ssh/id_rsa",
    "chmod": "chmod 600 ~/.ssh/id_rsa",
    "known_hosts": "ssh-keyscan github.com >> ~/.ssh/known_hosts"
  }
}
